@model manga_reader_web.Models.MangaListViewModel
@{
    ViewData["Title"] = "Danh sách manga";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-book me-2"></i>Danh sách manga</h1>
        <div class="dropdown">
            <button class="btn btn-outline-primary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="bi bi-sort-down me-1"></i> Sắp xếp
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="sortDropdown">
                <li>
                    <a class="dropdown-item @(Model.SortOptions.SortBy == "latest" ? "active" : "")" 
                       asp-action="Index" asp-route-sortBy="latest" asp-route-title="@Model.SortOptions.Title">
                        <i class="bi bi-clock me-2"></i>Mới nhất
                    </a>
                </li>
                <li>
                    <a class="dropdown-item @(Model.SortOptions.SortBy == "title" ? "active" : "")" 
                       asp-action="Index" asp-route-sortBy="title" asp-route-title="@Model.SortOptions.Title">
                        <i class="bi bi-sort-alpha-down me-2"></i>Theo tên (A-Z)
                    </a>
                </li>
                <li>
                    <a class="dropdown-item @(Model.SortOptions.SortBy == "popular" ? "active" : "")" 
                       asp-action="Index" asp-route-sortBy="popular" asp-route-title="@Model.SortOptions.Title">
                        <i class="bi bi-star-fill me-2"></i>Phổ biến
                    </a>
                </li>
            </ul>
        </div>
    </div>
    
    <div class="card mb-4 search-card">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text bg-primary text-white"><i class="bi bi-search"></i></span>
                        <input type="text" name="title" value="@Model.SortOptions.Title" class="form-control" placeholder="Nhập tên manga cần tìm...">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-2"></i>Tìm kiếm
                        </button>
                    </div>
                </div>
                <input type="hidden" name="sortBy" value="@Model.SortOptions.SortBy" />
                <input type="hidden" name="page" value="1" />
            </form>
        </div>
    </div>
    
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.ErrorMessage
        </div>
    }
    
    @if (Model.Mangas.Count == 0)
    {
        <div class="text-center py-5">
            <i class="bi bi-emoji-frown display-1 text-muted"></i>
            <h3 class="mt-3">Không tìm thấy manga</h3>
            <p class="text-muted">Không tìm thấy manga phù hợp với tiêu chí tìm kiếm của bạn.</p>
            <a asp-action="Index" class="btn btn-primary mt-2">
                <i class="bi bi-arrow-counterclockwise me-2"></i>Xóa bộ lọc
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var manga in Model.Mangas)
            {
                <div class="col-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 manga-card">
                        <a asp-action="Details" asp-route-id="@manga.Id" class="manga-cover-link">
                            <img src="@manga.CoverUrl" class="card-img-top manga-cover" alt="@manga.Title" loading="lazy"
                                 onerror="this.onerror=null; this.src='/images/no-cover.png';">
                            @if (!string.IsNullOrEmpty(manga.Status))
                            {
                                <span class="manga-status badge @(manga.Status == "ongoing" ? "bg-success" : "bg-secondary")">
                                    @TranslateStatus(manga.Status)
                                </span>
                            }
                        </a>
                        <div class="card-body">
                            <h5 class="card-title manga-title">
                                <a asp-action="Details" asp-route-id="@manga.Id" class="manga-title-link">
                                    @manga.Title
                                </a>
                            </h5>
                            @if (!string.IsNullOrEmpty(manga.Author))
                            {
                                <p class="card-text small text-muted">
                                    <i class="bi bi-person"></i> @manga.Author
                                </p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
        
        @if (Math.Ceiling((double)Model.TotalCount / Model.PageSize) > 1)
        {
            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="1" 
                                   asp-route-title="@Model.SortOptions.Title" 
                                   asp-route-sortBy="@Model.SortOptions.SortBy" aria-label="First">
                                    <i class="bi bi-chevron-double-left"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" 
                                   asp-route-title="@Model.SortOptions.Title" 
                                   asp-route-sortBy="@Model.SortOptions.SortBy" aria-label="Previous">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }
                        
                        @{
                            var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
                            var startPage = Math.Max(1, Model.CurrentPage - 2);
                            var endPage = Math.Min(startPage + 4, totalPages);
                            
                            if (endPage - startPage < 4 && startPage > 1)
                            {
                                startPage = Math.Max(1, endPage - 4);
                            }
                        }
                        
                        @for (var i = startPage; i <= endPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" 
                                   asp-route-title="@Model.SortOptions.Title" 
                                   asp-route-sortBy="@Model.SortOptions.SortBy">@i</a>
                            </li>
                        }
                        
                        @if (Model.CurrentPage < totalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" 
                                   asp-route-title="@Model.SortOptions.Title" 
                                   asp-route-sortBy="@Model.SortOptions.SortBy" aria-label="Next">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@totalPages" 
                                   asp-route-title="@Model.SortOptions.Title" 
                                   asp-route-sortBy="@Model.SortOptions.SortBy" aria-label="Last">
                                    <i class="bi bi-chevron-double-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
            
            <div class="text-center mt-2 text-muted">
                <small>Hiển thị @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount) trong tổng số @Model.TotalCount manga</small>
            </div>
        }
    }
</div>

@section Styles {
    <style>
        /* Manga Cards */
        .manga-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border-radius: 0.5rem;
            overflow: hidden;
        }
        
        .manga-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }
        
        .manga-cover-link {
            position: relative;
            display: block;
            height: 250px;
            overflow: hidden;
        }
        
        .manga-cover {
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }
        
        .manga-cover-link:hover .manga-cover {
            transform: scale(1.05);
        }
        
        .manga-status {
            position: absolute;
            bottom: 10px;
            left: 10px;
            font-size: 0.75rem;
        }
        
        .manga-title {
            font-size: 1rem;
            height: 40px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            margin-bottom: 0.5rem;
        }
        
        /* Search card */
        .search-card {
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            border: none;
        }
        
        /* Pagination */
        .pagination .page-link {
            border-radius: 0.25rem;
            margin: 0 2px;
        }
        
        .pagination .page-item.active .page-link {
            background-color: #0d6efd;
            border-color: #0d6efd;
        }
        
        /* Dropdown */
        .dropdown-item.active {
            background-color: #0d6efd;
            color: white;
        }
    </style>
}

@functions {
    public string TranslateStatus(string status)
    {
        return status switch
        {
            "ongoing" => "Đang tiến hành",
            "completed" => "Hoàn thành",
            "hiatus" => "Tạm ngưng",
            "cancelled" => "Đã hủy",
            _ => "Không rõ"
        };
    }
} 