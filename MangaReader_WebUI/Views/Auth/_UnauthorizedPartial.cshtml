@{
    var returnUrl = Context.Request.Path;
}

<div class="text-center py-5">
    <i class="bi bi-shield-lock" style="font-size: 3rem;"></i>
    <h5 class="mt-3">Yêu cầu đăng nhập</h5>
    <p class="text-muted">Vui lòng đăng nhập để xem lịch sử đọc truyện của bạn.</p>
    <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@returnUrl" class="btn btn-primary">
        <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
    </a>
</div> 