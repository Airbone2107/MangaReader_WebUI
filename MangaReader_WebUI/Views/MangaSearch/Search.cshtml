@model MangaReader.WebUI.Models.ViewModels.Manga.MangaListViewModel
@{
    ViewData["Title"] = "Tìm kiếm manga";
    ViewData["InitialViewMode"] = Context.Request.Cookies["MangaViewMode"] ?? "grid";
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="mb-4"><i class="bi bi-search me-2"></i>Tìm kiếm manga</h1>
            
            <partial name="_SearchFormPartial" model="Model" />
        </div>
    </div>
    
    <div id="search-results-and-pagination" data-htmx-test="true">
        <partial name="_SearchResultsWrapperPartial" model="Model" />
    </div>
</div> 